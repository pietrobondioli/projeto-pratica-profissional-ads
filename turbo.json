{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build:lib": {
			"dependsOn": []
		},
		"build": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build"]
		},
		"start:dev": {
			"dependsOn": ["^build:lib"],
			"cache": false
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": [],
			"inputs": [
				"src/**/*.tsx",
				"src/**/*.ts",
				"test/**/*.ts",
				"test/**/*.tsx"
			]
		},
		"//#prettier": {
			"dependsOn": [],
			"outputs": []
		},
		"deploy": {
			"dependsOn": ["build", "test", "prettier"],
			"outputs": []
		}
	}
}
