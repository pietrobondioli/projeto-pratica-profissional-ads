{
  "name": "projeto-pratica-profissional-ads",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "author": "Pietro Bondioli",
  "workspaces": [
    "apps/*",
    "packages/*"
