    "test": "turbo run test",
    "prettier": "prettier --write *"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "turbo": "^1.10.13"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
