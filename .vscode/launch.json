{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Debug Nest Framework",
			"args": ["${workspaceFolder}/apps/backend/src/main.ts"],
			"runtimeArgs": [
				"--nolazy",
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"sourceMaps": true,
			"envFile": "${workspaceFolder}/apps/backend/.env",
			"cwd": "${workspaceRoot}/apps/backend",
			"console": "integratedTerminal",
			"protocol": "inspector"
		}
	]
}
